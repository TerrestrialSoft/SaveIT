<div class="d-flex flex-column align-items-center">
    <h3>Download save @FileItem.Name</h3>
    <div class="d-flex justify-content-around">
        <div>
            Set as latest <Help Text="Setting this game save as active will lock the repository and " />:
        </div>
        <div>
            <InputCheckbox @bind-Value="_lockRepository" />
        </div>
    </div>
    <div class="d-flex justify-content-around">
        <Button Color="ButtonColor.Primary" Outline="true" Size="Size.Large" @onclick="HideModalAsync">Cancel</Button>
        <Button Color="ButtonColor.Primary" Size="Size.Large" @onclick="DownloadSaveAsync">Download</Button>
    </div>
</div>
