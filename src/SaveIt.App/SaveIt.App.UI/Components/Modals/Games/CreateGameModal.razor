<EditForm Model="CreateNewGameModel" OnValidSubmit="CreateGameAsync" autocomplete="off">
    <FluentValidationValidator />
    <div>
        <EditGame ModalLocalItemPicker="ModalLocalItemPicker" ModalCurrent="ModalCurrent" Model="CreateNewGameModel.Game"/>

        <h3 class="p-2">Game Save Information</h3>

        <EditGameSave
            ModalLocalItemPicker="ModalLocalItemPicker"
            ModalRemoteItemPicker="ModalRemoteItemPicker"
            ModalAuthorizeStorage="ModalAuthorizeStorage"
            ModalCurrent="ModalCurrent"
            Model="CreateNewGameModel.GameSave"/>

        <div class="d-flex justify-content-end">
            <Button Color="ButtonColor.Primary"
                Size="Size.Large"
                Type="ButtonType.Submit"
                TabIndex="8"
                Loading="_isSaving"
                Disabled="_isSaving">
                Create Game
            </Button>
        </div>
    </div>
</EditForm>
